FROM python:3.11-slim

# System deps (PNG/JPEG tooling; optional but nice to have)
RUN apt-get update && apt-get install -y --no-install-recommends \
    pngquant \
    oxipng || true
# mozjpeg isn't always in apt; your code falls back to Pillow if missing

# Pillow native libs
RUN apt-get update && apt-get install -y --no-install-recommends \
    libjpeg62-turbo-dev zlib1g-dev libpng-dev \
  && rm -rf /var/lib/apt/lists/*

WORKDIR /app
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

COPY . .

ENV PORT=5050
EXPOSE 5050

# Gunicorn for production
CMD ["gunicorn", "-b", "0.0.0.0:5050", "app:app", "--workers", "2", "--threads", "4"]
